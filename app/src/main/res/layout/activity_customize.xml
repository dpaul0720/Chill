<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="letschill.netflixchill.Customize"
    android:background="@drawable/background3">





    <ImageButton
        android:id="@+id/photo_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/nightlightbutton"
        android:background="@null"
        android:onClick="nightlight"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/photo_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/resetbutton"
        android:layout_marginTop="255dp"
        android:layout_centerHorizontal="true"

        android:background="@null"
        android:onClick="reset"

         />


    <ImageButton
        android:id="@+id/photo_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lightsbutton"
        android:background="@null"
        android:onClick="light"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />



    <ImageButton
        android:id="@+id/photo_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/donotdisturbbutton"
        android:background="@null"

        android:onClick="donotdisturb"
        android:layout_marginBottom="270dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:id="@+id/photo_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/tempbutton"
        android:background="@null"
        android:onClick="temp"
        android:layout_marginBottom="270dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
